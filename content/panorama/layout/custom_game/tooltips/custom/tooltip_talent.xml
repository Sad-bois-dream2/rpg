<root>
    <styles>
        <include src="file://{resources}/styles/tooltips/custom/tooltip_item.css"/>
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/tooltips/tooltip_talent.js"/>
    </scripts>
    <Panel style="visibility: collapse;" class="ItemTooltip" hittest="false" hittestchildren="false">
        <Panel id="TalentTooltipHeader" class="ItemTooltipHeader">
            <Panel>
                <Image id="TalentTooltipImage" style="width: 64px; height: 64px;" class="ItemTooltipImage"
                       hittest="false"
                       scaling="stretch-to-fit-preserve-aspect"
                       src="file://{images}/spellicons/drow_ranger_wave_of_silence.png"/>
            </Panel>
            <Panel class="ItemTooltipName">
                <Label id="TalentTooltipNameLabel" html="true" class="ItemTooltipNameLabel" text="Talent Name"/>
            </Panel>
        </Panel>
        <Panel class="ItemTooltipDescription">
            <Label id="TalentTooltipTextLabel" class="ItemTooltipLabel" html="true" text="Talent Description"/>
        </Panel>
    </Panel>
</root>